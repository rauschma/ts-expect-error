{
  "name": "ts-expect-error",
  "version": "1.0.0",
  "author": "Axel Rauschmayer",
  "description": "A tool that checks //@ts-expect-error",
  "license": "MIT",
  "repository": "github:rauschma/ts-expect-error",
  "type": "module",
  "bin": {
    "ts-expect-error": "dist/src/expect-error.js",
    "tsee": "dist/src/expect-error.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run chmod",
    "watch": "tsc --watch",
    "clean": "shx rm -rf ./dist/*",
    "chmod": "chmod u+x ./dist/src/expect-error.js",
    "\n========== Testing ==========": "",
    "test": "node --test --enable-source-maps",
    "testall": "node --test --enable-source-maps \"./dist/**/*_test.js\"",
    "\n========== Publishing ==========": "",
    "dry": "npm publish --dry-run",
    "prepublishOnly": "npm run build",
    "packlist": "npx npm-packlist"
  },
  "dependencies": {
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "shx": "^0.3.4"
  }
}
